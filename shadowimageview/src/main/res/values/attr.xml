<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ShadowImageView">
        <attr name="round" format="dimension" />
        <attr name="leftTopRound" format="dimension" />
        <attr name="leftBottomRound" format="dimension" />
        <attr name="rightTopRound" format="dimension" />
        <attr name="rightBottomRound" format="dimension" />
        <attr name="hShadow" format="dimension" />
        <attr name="vShadow" format="dimension" />
        <attr name="blur" format="dimension" />
        <attr name="borderWidth" format="dimension" />
        <attr name="borderColor" format="dimension" />
        <attr name="shadowColor" format="color" />
        <attr name="src" format="reference" />
        <attr name="srcWidth" format="dimension|enum">
            <enum name="fill_parent" value="-1" />
            <enum name="match_parent" value="-1" />
            <enum name="wrap_content" value="-2" />
        </attr>
        <attr name="srcHeight" format="dimension|enum">
            <enum name="fill_parent" value="-1" />
            <enum name="match_parent" value="-1" />
            <enum name="wrap_content" value="-2" />
        </attr>
    </declare-styleable>
</resources>